# Schnucks Clipper Configuration
SCHNUCKS_BASE_URL=https://schnucks.com
DATA_PATH=./data
SESSION_FILE=./data/session.json
LOG_LEVEL=info

# Job Type Configuration
# Set to 'weekly-summary' to run the weekly summary job instead of the clipper
# Defaults to 'clipper' if not set
JOB_TYPE=clipper

# Weekly Summary Configuration (only required when JOB_TYPE=weekly-summary)
# Log Analytics Workspace ID (Customer ID) for querying logs
LOG_ANALYTICS_WORKSPACE_ID=

# SMTP Configuration for sending weekly summary emails
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_TO=

# Optional: Job name for filtering logs (defaults to container job name if not set)
JOB_NAME=
